<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_nav"
    app:startDestination="@id/userTypeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.scandrug.scandrug.presentation.authentication.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.scandrug.scandrug.presentation.authentication.ForgetPasswordFragment"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.scandrug.scandrug.presentation.authentication.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
    <fragment
        android:id="@+id/userTypeFragment"
        tools:layout="@layout/fragment_user_type"
        android:name="com.scandrug.scandrug.presentation.authentication.UserTypeFragment"
        android:label="UserTypeFragment" >
        <action
            android:id="@+id/action_userTypeFragment_to_deliveryActivity"
            app:destination="@id/deliveryActivity" />
        <action
            android:id="@+id/action_userTypeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <activity
        android:id="@+id/deliveryActivity"
        android:name="com.scandrug.scandrug.presentation.home.delivery.DeliveryActivity"
        android:label="activity_delivery"
        tools:layout="@layout/activity_delivery" />

</navigation>